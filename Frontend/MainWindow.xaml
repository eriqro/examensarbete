<Window x:Class="Tune.Frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tune" Height="450" Width="800">
    <Grid>
        <!-- Audio player that stays alive across pages -->
        <MediaElement x:Name="GlobalMediaPlayer" Visibility="Collapsed" LoadedBehavior="Manual" />
        
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
