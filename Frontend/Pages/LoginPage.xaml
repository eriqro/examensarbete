<Page x:Class="Tune.Frontend.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="LoginPage"
      Background="#2E2E2E">

    <Page.Resources>

        <Style TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="#8AF3FF"/>
            <Setter Property="Foreground" Value="#2E2E2E"/>
            <Setter Property="BorderBrush" Value="#8AF3FF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="10,0,10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2E2E2E"/>
            <Setter Property="BorderBrush" Value="#8AF3FF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CaretBrush" Value="#8AF3FF"/>
            <Setter Property="Margin" Value="10,5,10,0"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2E2E2E"/>
            <Setter Property="BorderBrush" Value="#8AF3FF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CaretBrush" Value="#8AF3FF"/>
            <Setter Property="Margin" Value="10,5,10,5"/>
        </Style>

    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="1"
               Source="pack://application:,,,/imgs/Logo.png"
               Width="120"
               Height="120"
               HorizontalAlignment="Center"
               Margin="0,5,0,5"/>

        <TextBlock Grid.Row="2"
                   Text="Welcome to Tune"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#8AF3FF"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <StackPanel Grid.Row="3"
                    HorizontalAlignment="Center">
            <TextBlock Text="Username"
                       FontSize="14"
                       Margin="0,0,0,2"
                       Foreground="White"/>
            <TextBox Name="UsernameBox"/>
        </StackPanel>

        <StackPanel Grid.Row="4"
                    HorizontalAlignment="Center">
            <TextBlock Text="Password"
                       FontSize="14"
                       Margin="0,0,0,2"
                       Foreground="White"/>
            <PasswordBox Name="PasswordBox"/>
        </StackPanel>

        <StackPanel Grid.Row="5"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Margin="0,20,0,0">
            <Button x:Name="LoginButton"
                    Content="Login"
                    Click="Login_Click"/>
            <Button x:Name="GotoSignupButton"
                    Content="Sign Up"
                    Click="SignUp_click"/>
        </StackPanel>

    </Grid>
</Page>
